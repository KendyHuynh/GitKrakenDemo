@{
    ViewData["Title"] = "Admin Products";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var lstOrder = ViewData["lstOrder"] as IEnumerable<Order>;
    var lstOrderItem = ViewData["lstOrderItem"] as IEnumerable<OrderItem>;
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Products</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Dashboard v1</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <a class="btn btn-primary" asp-area="Admin" asp-controller="Dashboard" asp-action="Create">Create Product</a>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-12">
                <table class="table table-bordered">

                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Product Name</th>
                            <th scope="col">Image</th>
                            <th scope="col">Configuration Infor</th>
                            <th scope="col">Product Type</th>
                            <th scope="col">Provider</th>
                            <th scope="col">Price</th>
                            <th scope="col">Option</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (lstProduct != null)
                        {
                            @for (var i = 0; i < lstProduct.Count(); i++)
                            {
                                var product = lstProduct.ElementAtOrDefault(i);
                                <tr>
                                    <td scope="row" width="100">@product.ProductId</td>
                                    <td scope="row" width="150">@product.ProductName</td>
                                    <td scope="row"><img src="~/images/@product.Image" alt="@product.Image" width="100"></td>
                                    <td scope="row" width="170">@product.Description</td>
                                    <td scope="row" width="150">@product.Category.CategoryName</td>
                                    <td scope="row" width="100">@product.Brand.BrandName</td>
                                    <td scope="row" width="150">@product.Price</td>
                                    <td>
                                        <a class="btn btn-info" asp-area="Admin" asp-controller="Dashboard" asp-action="Detail" asp-route-ID="@product.ProductId">View Detail</a>
                                        <a class="btn btn-warning" asp-area="Admin" asp-controller="Dashboard" asp-action="Edit" asp-route-ID="@product.ProductId">Edit</a>
                                        <a class="btn btn-danger" asp-area="Admin" asp-controller="Dashboard" asp-action="Delete" asp-route-ID="@product.ProductId">Delete</a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8">No products available.</td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
