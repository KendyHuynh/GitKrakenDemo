<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Electronic Store</title>
    <!-- Favicon -->
    <link href="img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/css/style.css" rel="stylesheet">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/paginationjs/2.1.5/pagination.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/paginationjs/2.1.5/pagination.min.js"></script>
    <link rel="stylesheet" href="~\css\LoginAndSignin.css">
</head>
<body>
    <!-- Topbar Start -->
    <div class="container-fluid">
        <div class="row bg-secondary py-2 px-xl-5">
            <div class="col-lg-6 d-none d-lg-block">
                <div class="d-inline-flex align-items-center">
                    <a class="text-dark" href="">FAQs</a>
                    <span class="text-muted px-2">|</span>
                    <a class="text-dark" href="">Help</a>
                    <span class="text-muted px-2">|</span>
                    <a class="text-dark" href="">Support</a>
                </div>
            </div>
            <div class="col-lg-6 text-center text-lg-right">
                <div class="d-inline-flex align-items-center">
                    <a class="text-dark px-2" href="">
                        <i class="fab fa-facebook-f"></i>
                    </a>
                    <a class="text-dark px-2" href="">
                        <i class="fab fa-twitter"></i>
                    </a>
                    <a class="text-dark px-2" href="">
                        <i class="fab fa-linkedin-in"></i>
                    </a>
                    <a class="text-dark px-2" href="">
                        <i class="fab fa-instagram"></i>
                    </a>
                    <a class="text-dark pl-2" href="">
                        <i class="fab fa-youtube"></i>
                    </a>
                </div>
            </div>
        </div>
        <div class="row align-items-center py-3 px-xl-5">
            <div class="col-lg-3 d-none d-lg-block">
                <a href="" class="text-decoration-none">
                    <h1 class="m-0 display-5 font-weight-semi-bold"><span class="text-primary font-weight-bold border px-3 mr-1">E</span>Store</h1>
                </a>
            </div>
            <div class="col-lg-6 col-6 text-left">
                <form asp-action="Index" asp-controller="Product" method="get">
                    <div class="input-group">
                        <input type="text" class="form-control my-0 py-1 red-border" placeholder="Tìm kiếm sản phẩm" name="childname" id="searchInput">
                        <div class="input-group-append">
                            <span class="input-group-text bg-transparent text-primary" id="basic-text">
                                <i class="fas fa-search text-yellow" aria-hidden="true"></i>
                            </span>
                        </div>
                    </div>
                </form>
            </div>
            @{
                var isLoggedIn = Context.Session.GetString("IsLoggedIn") == "true";
                var cartItemCount = Context.Session.GetInt32("CartItemCount");
            }

            <div class="col-lg-3 col-6 text-right">
                @if (isLoggedIn)
                {
                    <a asp-controller="Cart" asp-action="ShoppingCart" class="btn border">
                        <i class="fas fa-shopping-cart text-primary"></i>
                        <span class="badge" id="cartItemCount">@ViewBag.CartItemQuantity</span>
                    </a>
                }
                else
                {
                    <a asp-controller="Account" asp-action="Login" class="btn border">
                        <i class="fas fa-shopping-cart text-primary"></i>
                        <span class="badge" id="cartItemCount">@ViewBag.CartItemQuantity</span>
                    </a>
                }
            </div>

        </div>
    </div>
    <!-- Topbar End -->
    @RenderBody()
    <!-- Vendor Start -->
    <div class="container-fluid py-5">
        <div class="row px-xl-5">
            <div class="col">
                <div class="owl-carousel vendor-carousel">
                    <div class="vendor-item border p-4">
                        <img src="~/images/Apple_logo.png" alt="">
                    </div>
                    <div class="vendor-item border p-4">
                        <img src="~/images/samsung-logo.jpg" alt="">
                    </div>
                    <div class="vendor-item border p-4">
                        <img src="~/images/Oppo_logo.jpg" alt="">
                    </div>
                    <div class="vendor-item border p-4">
                        <img src="~/images/acser_logo.jpg" alt="">
                    </div>
                    <div class="vendor-item border p-4">
                        <img src="~/images/Asus_logo.jpg" alt="">
                    </div>
                    <div class="vendor-item border p-4">
                        <img src="~/images/dell_logo.jpg" alt="">
                    </div>
                    <div class="vendor-item border p-4">
                        <img src="~/images/intel_logo.png" alt="">
                    </div>
                    <div class="vendor-item border p-4">
                        <img src="~/images/HP_logo.jpeg" alt="">
                    </div>
                    <div class="vendor-item border p-4">
                        <img src="~/images/LG_logo.jpg" alt="">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Vendor End -->
    <!-- Footer Start -->
    <div class="container-fluid bg-secondary text-dark mt-5 pt-5">
        <div class="row px-xl-5 pt-5">
            <div class="col-lg-4 col-md-12 mb-5 pr-3 pr-xl-5">
                <a href="" class="text-decoration-none">
                    <h1 class="mb-4 display-5 font-weight-semi-bold"><span class="text-primary font-weight-bold border border-white px-3 mr-1">Electronic Store</span></h1>
                </a>
                <p>Electronic Store là điểm đến hàng đầu cho những người đam mê công nghệ và điện tử. Chúng tôi tự hào cung cấp một bộ sưu tập đa dạng các sản phẩm công nghệ hàng đầu từ các thương hiệu uy tín. </p>
                <p class="mb-2"><i class="fa fa-map-marker-alt text-primary mr-3"></i>15 QL22, Tân Xuân, Hóc Môn, Thành phố Hồ Chí Minh, Vietnam</p>
                <p class="mb-2"><i class="fa fa-envelope text-primary mr-3"></i>ElectronicStore@gmail.com</p>
                <p class="mb-0"><i class="fa fa-phone-alt text-primary mr-3"></i>093 778 1373</p>
            </div>
            <div class="col-lg-8 col-md-12">
                <div class="row">
                    <div class="col-md-4 mb-5">
                        <h5 class="font-weight-bold text-dark mb-4">Chăm sóc khách hàng</h5>
                        <div class="d-flex flex-column justify-content-start">
                            <a class="text-dark mb-2" href="#"><i class="fa fa-angle-right mr-2"></i>Trung tâm trợ giúp</a>
                            <a class="text-dark mb-2" href="#"><i class="fa fa-angle-right mr-2"></i>Hướng dẫn mua hàng</a>
                            <a class="text-dark mb-2" href="#"><i class="fa fa-angle-right mr-2"></i>Hướng dẫn thanh toán</a>
                            <a class="text-dark mb-2" href="#"><i class="fa fa-angle-right mr-2"></i>Chính sách bảo hành</a>
                            <a class="text-dark mb-2" href="#"><i class="fa fa-angle-right mr-2"></i>Chăm sóc khách hàng</a>
                        </div>
                    </div>
                    <div class="col-md-4 mb-5">
                        <h5 class="font-weight-bold text-dark mb-4">Về cửa hàng</h5>
                        <div class="d-flex flex-column justify-content-start">
                            <a class="text-dark mb-2" href="#"><i class="fa fa-angle-right mr-2"></i>Trang chủ</a>
                            <a class="text-dark mb-2" href="#"><i class="fa fa-angle-right mr-2"></i>Giới thiệu về cửa hàng</a>
                            <a class="text-dark mb-2" href="#"><i class="fa fa-angle-right mr-2"></i>Tuyển dụng</a>
                            <a class="text-dark mb-2" href="#"><i class="fa fa-angle-right mr-2"></i>Liên hệ</a>
                        </div>
                    </div>
                    <div class="col-md-4 mb-5">
                        <h5 class="font-weight-bold text-dark mb-4">Nhận thông báo về sản phẩm</h5>
                        <form action="">
                            <div class="form-group">
                                <input type="text" class="form-control border-0 py-4" placeholder="Họ và tên" required="required" />
                            </div>
                            <div class="form-group">
                                <input type="email" class="form-control border-0 py-4" placeholder="Email"
                                       required="required" />
                            </div>
                            <div>
                                <button class="btn btn-primary btn-block border-0 py-3" type="submit">Đăng ký ngay</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="row border-top border-light mx-xl-5 py-4">
            <div class="col-md-6 px-xl-0">
                <p class="mb-md-0 text-center text-md-left text-dark">
                    <div class="container">
                        &copy; 2023 - Electronic Store - Điện tử & Công nghệ hàng đầu. <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </div>
                </p>
            </div>
            <div class="col-md-6 px-xl-0 text-center text-md-right">
                <img class="img-fluid" src="img/payments.png" alt="">
            </div>
        </div>
    </div>
    <!-- Footer End -->
    <!-- Back to Top -->
    <a href="#" class="btn btn-primary back-to-top"><i class="fa fa-angle-double-up"></i></a>


    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
    <script src="lib/easing/easing.min.js"></script>
    <script src="lib/owlcarousel/owl.carousel.min.js"></script>

    <!-- Contact Javascript File -->
    <script src="mail/jqBootstrapValidation.min.js"></script>
    <script src="mail/contact.js"></script>

    <!-- Template Javascript -->
    <script src="js/main.js"></script>


    <script>
        document.getElementById("searchInput").addEventListener("input", function () {

        });
    </script>
    <script>
    // Đảm bảo rằng tất cả các HTML đã được tải
    document.addEventListener("DOMContentLoaded", function () {
        // Lấy tham chiếu đến phần tử span hiển thị số lượng giỏ hàng
        var cartItemCountElement = document.getElementById("cartItemCount");

        // Hàm để cập nhật số lượng sản phẩm trong giỏ hàng
        function updateCartItemCount(newCount) {
            cartItemCountElement.innerText = newCount;
        }

        // Mô phỏng việc cập nhật số lượng sản phẩm (có thể sử dụng Ajax để lấy số liệu thực tế từ máy chủ)
        var cartItemCount = @ViewBag.CartItemQuantity; // Điều này giả định số lượng sản phẩm ban đầu
        updateCartItemCount(cartItemCount);

        // Ví dụ: cập nhật số lượng khi người dùng thêm sản phẩm vào giỏ hàng
        // Có thể sử dụng sự kiện click trên nút "Thêm vào giỏ hàng"
        var addToCartButton = document.getElementById("addToCartButton"); // Điều này cần phải có id trong nút "Thêm vào giỏ hàng"
        addToCartButton.addEventListener("click", function () {
            // Tính toán và cập nhật số lượng sản phẩm trong giỏ hàng sau khi thêm sản phẩm
            cartItemCount += 1; // Ví dụ: tăng số lượng lên 1 sau khi thêm sản phẩm
            updateCartItemCount(cartItemCount);
        });
    });
    </script>

</body>

</html>