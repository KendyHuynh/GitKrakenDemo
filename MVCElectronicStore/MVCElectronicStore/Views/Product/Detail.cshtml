@model ProductViewModel
@{
    ViewData["Title"] = "Product Detail";
    ProductViewModel product = ViewData["Product"] as ProductViewModel;
}

<!-- Main content -->
<div class="container-fluid">
    <div class="row mt-3">
        <div class="col-md-6">
            @if (product != null)
            {
                <img class="img-fluid" src="~/images/@product.Image" alt="@product.Image" style="max-height: 80vh; width: 100%; border: 1px solid #ccc; border-radius: 5px; box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);">
            }
        </div>
        <div class="col-md-6">
            @if (product != null)
            {
                <div class="card" style="border: none; box-shadow: none;">
                    <div class="card-body">
                        <h2 class="card-title text-primary" style="font-size: 24px; font-weight: bold;">@product.ProductName</h2>
                        <p class="card-text" style="font-size: 18px;">@product.Description</p>
                        <p class="card-text" style="font-size: 24px; color: red;">Giá: @product.Price VND </p>
                        <p class="card-text" style="font-size: 18px;">Màu sắc: @product.Color</p>
                        <p class="card-text" style="font-size: 18px;">Thể loại: @product.CategoryName</p>
                        <p class="card-text" style="font-size: 18px;">Thương hiệu: @product.BrandName</p>
                        <div class="text-center mt-4">
                            <button class="btn btn-primary" id="buyNowButton">Mua Ngay</button>
                            <button asp-controller="Cart" asp-action="AddToCart" class="btn btn-success" id="addToCartButton">Thêm vào Giỏ Hàng</button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- /.content -->
