@{
    ViewData["Title"] = "Sản phẩm";
    var lstProduct = ViewData["lstProduct"] as IEnumerable<Product>;
}

<!-- Products Start -->
<div class="container-fluid pt-5">
    <div class="text-center mb-4">
        <h2 class="section-title px-5"><span class="px-2">Sản phẩm</span></h2>
    </div>
    <div class="row px-xl-5 pb-3">
        @if (lstProduct != null)
        {
            @for (var i = 0; i < lstProduct.Count(); i++)
            {
                var product = lstProduct.ElementAtOrDefault(i);

                <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
                    <div class="card product-item border-0 mb-4">
                        <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
                            <img class="img-fluid w-100" src="@product.Image" alt="@product.Image"
                                 style=" width: 100px; height: 250px;object-fit: cover">
                        </div>
                        <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
                            <h6 class="text-truncate mb-3">@product.ProductName</h6>
                            <div class="d-flex justify-content-center">
                                <h6>@product.Price</h6>
                            </div>
                        </div>
                        <div class="card-footer d-flex justify-content-between bg-light border">
                            <a href="" class="btn btn-sm text-dark p-0">
                                <i class="fas fa-eye text-primary mr-1"></i>View Detail
                            </a>
                            <a href="" class="btn btn-sm text-dark p-0">
                                <i class="fas fa-shopping-cart text-primary mr-1"></i>Add To Cart
                            </a>
                        </div>
                    </div>
                </div>

            }
        }
        else
        {
            <table>
             <tbody>
                 <tr>
                     <td colspan="8">No products available.</td>
                 </tr>
             </tbody>
            </table>  
        }
    </div>

</div>
<!-- Products End -->
<!-- Hiển thị phân trang -->
<div id="pagination-container">
    <ul class="pagination"></ul>
</div>
<script>
    var itemsPerPage = 8;
    var currentPage = 1;
    // Khởi tạo phân trang
    function initPagination() {
        $('#pagination-container').pagination({
            dataSource: productList,
            pageSize: itemsPerPage,
            pageRange: 1, // Số lượng trang được hiển thị xung quanh trang hiện tại
            callback: function (data, pagination) {
                // Hiển thị danh sách sản phẩm ở trang hiện tại
                displayProducts(data);
            }
        });
    }

    // Hiển thị danh sách sản phẩm
    function displayProducts(products) {
        var productListHtml = '';

        for (var i = 0; i < products.length; i++) {
            var product = products[i];
            productListHtml += '<div class="product">' + product.name + '</div>';
        }

        $('#product-list').html(productListHtml);
    }

    // Khởi tạo phân trang khi trang web được tải
    $(document).ready(function () {
        initPagination();
    });
</script>